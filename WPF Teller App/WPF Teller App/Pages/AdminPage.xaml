<Page x:Class="WPF_Teller_App.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Teller_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <!--
        TODO: Make AddUser (:
        -->
        <!--<Label Content="✨ you are admining ✨" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->

        <!-- Move Create Worker to a user controll -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
                
<!--https://stackoverflow.com/questions/9233148/can-i-have-one-style-with-multiple-targettype-in-wpf-->
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="MinWidth" Value="100"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="MinWidth" Value="100"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
                <Style TargetType="StackPanel">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label Content="Username: "/>
                <TextBox x:Name="UsernameTextBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label Content="Password: "/>
                <PasswordBox x:Name="PasswordTextBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Label Content="Password Confirm: "/>
                <PasswordBox x:Name="PasswordConfirmTextBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3">
                <Label Content="Is Admin: "/>
                <CheckBox x:Name="IsAdminCheckBox" IsChecked="False" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4">
                <Label Content="Salary: "/>
                <TextBox x:Name="SalaryTextBox"/>
            </StackPanel>

        <!-- Move Create Person to a user controll -->
        </Grid>
    </Grid>
</Page>
