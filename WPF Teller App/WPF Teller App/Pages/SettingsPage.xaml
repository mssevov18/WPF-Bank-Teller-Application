<Page x:Class="WPF_Teller_App.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Teller_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <StackPanel Height="50" Orientation="Horizontal">
            <Label Content="Bank Name: "/>
            <TextBox Width="50" x:Name="BankNameTextBox" Text=""/>
            <Button Width="50" x:Name="SubmitButton" Content="Submit" Click="SubmitButton_Click"/>
            <Label x:Name="BankIdLabel" Content="Bank Id: ?"/>
            
        </StackPanel>
    </Grid>
</Page>
